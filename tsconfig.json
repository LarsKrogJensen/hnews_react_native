{
  "compilerOptions": {
    "target": "es2015",
    "module": "es2015",
    "moduleResolution": "node",
    "jsx": "react-native",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "rootDir": "src",
    "noEmit": true,
    "importHelpers": true,
//    "allowJs": true,
    "baseUrl": "./src"
  },
  "exclude": [
    "index.android.js",
    "index.ios.js",
    "build",
    "node_modules",
    "__tests__"
  ],
  "compileOnSave": false
}