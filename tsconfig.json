{
  "compilerOptions": {
    "target": "es2015",
    "module": "es2015",
    "jsx": "react-native",
    "moduleResolution": "node",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "rootDir": "src",
    "noImplicitAny": false,
    "strictNullChecks": true,
    "baseUrl": "./src"
  },
  "exclude": [
    "index.android.js",
    "index.ios.js",
    "build",
    "node_modules",
    "__tests__"
  ]
  //  "compileOnSave": false
}